{
  "name": "@dotmac/primitives",
  "version": "1.0.0",
  "description": "Unstyled, composable UI primitives for DotMac platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "prebuild": "echo 'Type checking handled by tsup'",
    "build": "tsup && pnpm exec tsc -p tsconfig.build.json",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "echo 'Linting disabled pending chart component type fixes'",
    "type-check": "tsc -p tsconfig.json --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "lint:fix": "echo 'Linting disabled pending chart component type fixes'",
    "format": "echo 'No formatter configured for primitives package'"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@heroicons/react": "^2.1.5",
    "@emotion/is-prop-valid": "^1.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dompurify": "^3.0.5",
    "framer-motion": "^11.0.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.363.0",
    "react-hook-form": "^7.66.0",
    "react-leaflet": "^4.2.1",
    "react-window": "^2.2.1",
    "recharts": "^2.12.2",
    "tailwind-merge": "^2.0.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@dotmac/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/dompurify": "^3.0.3",
    "@types/node": "^20.17.9",
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.5",
    "@types/react-window": "^1.8.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "governance": {
    "complexity": {
      "dataComponents": [
        "**/*DataTable*.{ts,tsx}",
        "**/*Chart*.{ts,tsx}"
      ],
      "uiComponents": [
        "**/*Dashboard*.{ts,tsx}",
        "**/*Form*.{ts,tsx}"
      ],
      "frameworkComponents": [
        "**/app/**/*.{ts,tsx}",
        "**/pages/**/*.{ts,tsx}"
      ]
    },
    "linting": {
      "framework": "nextjs",
      "lastUpdated": "2025-08-19T03:21:20.455Z"
    }
  }
